#!/bin/bash
#set -x

[[ $1 == '-h' ]] && {
    cat <<EOF
   gods [job-name [job-name ...]]
      display the pods of the specified jobs if no job
      is specified then the pods of all jobs will
      be displayed.
EOF
    
    exit 0
}
jobs=( $@ )

(( ! ${#jobs[@]} )) && {
   jobs=( $(oc get jobs -o name) )
}

for j in ${jobs[@]}; do 
  j=${jobs##*/}
  oc get pods -l job-name=$j -o name
done
