#!/bin/bash
set -x
cmd="$@"

echo $cmd

oc apply -f - <<EOF
apiVersion: batch/v1
kind: Job
metadata:
  name: gpu-job
  labels:
    kueue.x-k8s.io/queue-name: gpu-localqueue
    test_name: kueue_test
spec:
  parallelism: 1
  completions: 1
  template:
    spec:
      tolerations:
      - key: "nvidia.com/gpu.product"
        operator: "Exists"
        effect: "NoSchedule"
      restartPolicy: Never
      containers:
        - name: gpu-job-$$
          image: image-registry.openshift-image-registry.svc:5000/redhat-ods-applications/minimal-gpu:2025.1
          command: ["/bin/sh", "-c", "$cmd"]
          resources:
            requests:
              nvidia.com/gpu: 1
            limits:
              nvidia.com/gpu: 1
EOF
